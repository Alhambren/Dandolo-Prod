{
  "buildCommand": "echo 'VITE_CONVEX_URL=https://judicious-hornet-148.convex.cloud' > .env.production && NODE_ENV=production npx convex deploy --yes --typecheck=disable && NODE_ENV=production npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "NODE_ENV": "production",
    "VITE_CONVEX_URL": "https://judicious-hornet-148.convex.cloud"
  },
  "rewrites": [
    {
      "source": "/v1/(.*)",
      "destination": "/api/v1/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "api/v1/chat/completions.js": {
      "maxDuration": 30
    }
  }
}
